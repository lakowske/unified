#!/usr/bin/env python3
"""Unified CLI for environment management."""

import sys
from pathlib import Path

# Add src to path
sys.path.insert(0, str(Path(__file__).parent / "src"))

from unified.cli.environment import EnvironmentCLI

def main():
    """Main CLI entry point."""
    cli = EnvironmentCLI()
    sys.exit(cli.run())

if __name__ == "__main__":
    main()